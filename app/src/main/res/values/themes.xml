<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InterviewAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/mainColor</item>
        <!-- Customize your theme here. -->
    </style>

<!--    定义一条线-->
    <style name="lineStyle">
        <item name="android:layout_marginLeft">@dimen/main_margin</item>
        <item name="android:layout_marginRight">@dimen/main_margin</item>
        <item name="android:layout_marginVertical">@dimen/line_margin_v</item>
        <item name="android:background">@color/line_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
    </style>

    <style name="itemTitleStyle" >
        <item name="android:textSize">@dimen/item_cell_title_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>